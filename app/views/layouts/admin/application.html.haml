!!!
%html{lang: I18n.locale}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "NOODP", name: "ROBOTS"}
    %meta{content: "initial-scale=1", name: "viewport"}
    %title
      = content_for(:title)
      \- #{application_title}
    = render "stylesheet"
    = csrf_meta_tags
    = csp_meta_tag if defined?(csp_meta_tag)
    = render "javascript"

  %body
    = render "icons"
    .app-container
      = render "navigation"
      %main.main-content
        = render "flashes"
        = yield
