%nav.navbar-sm.lg:navbar.flex.py-2.lg:pt-0{class: "!px-0"}
  .navbar-start.flex
    - p = @channel.previous_date_before(@date)
    - unless p.nil?
      = link_to raw("&lsaquo;&nbsp;#{long_date(p)}"), channel_date_path(@channel, p), class: "btn btn-ghost btn-sm lg:btn-md normal-case font-normal"
  .navbar-end.flex.text-sm.lg:text-md
    - n = @channel.next_date_after(@date)
    - unless n.nil?
      = link_to raw("#{long_date(n)}&nbsp;&rsaquo;"), channel_date_path(@channel, n), class: "btn btn-ghost btn-sm lg:btn-md normal-case font-normal"
