.search
  %h1 Search

  = render partial: 'form'

  - unless @results.nil?
    %hr
    .results
      %small.text-muted
        - if @results.count > SearchController::MAX_RESULTS
          showing
          #{number_with_delimiter(SearchController::MAX_RESULTS)}
          of
        #{pluralize(number_with_delimiter(@results.count), 'message')} found
      - unless @results.empty?
        = render partial: 'message', collection: @urls_results
        = paginate @results
