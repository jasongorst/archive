#search
  %h1.text-2xl.pb-3 Search

  = render partial: 'form'

  - unless @messages.nil?
    %hr.my-6
    #results
      %small
        - if @messages.count > SearchController::MAX_RESULTS
          showing #{number_with_delimiter(SearchController::MAX_RESULTS)} of
        #{pluralize(number_with_delimiter(@messages.count), 'message')} found
      = paginate @messages
      = render partial: 'message', collection: @messages
      = paginate @messages
