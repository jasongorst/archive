= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :ts
    = f.text_field :ts
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :channel
    = f.text_field :channel
  .actions
    = f.submit 'Save'
