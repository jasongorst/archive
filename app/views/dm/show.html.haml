%h1.text-lg.lg:text-2xl.pb-2.lg:pb-3
  #{@private_channel.other_users_as_sentence(current_account.user)}

- this_year.downto(@private_channel.date_of_oldest_message.year).each do |year|
  - if year_contained_in?(year, @private_channel.message_dates_with_counts)
    - 12.downto(1).each do |month|
      - if month_contained_in?(month, year, @private_channel.message_dates_with_counts)
        = render(partial: "month", locals: { private_channel: @private_channel, month: month, year: year })
