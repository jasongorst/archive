.collapse
  %input.h-10.min-h-0{type: "radio", name: "months-accordion",
    checked: (year == @dates_with_counts.first[0].year && month == @dates_with_counts.first[0].month ? true : false)}
  .collapse-title.py-2.h-10.min-h-0
    = Date::MONTHNAMES[month]
    - if year != this_year
      = year
  .collapse-content{class: "!pb-0"}
    %ul.menu.lg:menu-lg.py-0.pb-2.px-0
      = render(partial: "dates_in_month",
        locals: { dates_with_counts: @dates_with_counts, month: month, year: year })

