%ul.p-2.z-10.text-primary-content{class: "!bg-primary"}
  - Channel.unarchived.with_messages.each do |channel|
    %li
      %a{href: url_for(channel), class: ("bg-primary-focus" if current_channel == channel.name)}
        \##{channel.name}
  %li
    %details{open: current_channel.in?(Channel.archived.with_messages.pluck(:name))}
      %summary{class: ("bg-primary-focus" if current_channel.in?(Channel.archived.with_messages.pluck(:name)))}
        Archived
      %ul
        - Channel.archived.with_messages.each do |channel|
          %li
            %a{href: url_for(channel), class: ("bg-primary-focus" if current_channel == channel.name)}
              \##{channel.name}
